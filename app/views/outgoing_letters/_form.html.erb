<%= f.error_messages %>

<div class="box tabular">
<div class="splitcontentleft">
<p><%= f.text_field :outgoing_code, :required => true, :size => 10 %></p>
<p><%= f.text_field :incoming_code, :size => 10 %></p>
<p><%= f.text_field :signer, :size => 40 %></p>
<p><%= f.text_field :recipient, :size => 40 %></p>
</div>
<div class="splitcontentright">
<p><%= f.text_field :shipping_on, :required => true, :size => 10 %><%= calendar_for('outgoing_letter_shipping_on') %></p>
<p><%= f.select :shipping_type, t(:list_shipping_type), :required => true, :prompt => t(:prompt_please_select) %></p>
<p><%= f.text_field :shipping_to, :required => true, :size => 40 %></p>
<p><%= f.text_field :served_on, :size => 10 %><%= calendar_for('outgoing_letter_served_on') %></p>
</div>
<div style="clear:both"></div>
<p><%= f.text_area :description, :cols => 60, :rows => 15, :class => 'wiki-edit' %></p>
<%= link_to_attachments @object if @object.attachments.any? %> 
<p id="attachments_form"><%= label_tag('attachments[1][file]', l(:label_attachment_plural))%><%= render :partial => 'attachments/form', :locals => {:container => @object} %></p>
</div>

<%= wikitoolbar_for 'outgoing_letter_description' %>
