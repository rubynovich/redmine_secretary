<div class="contextual">
  <%= link_to l(:button_add), {:action => 'new'}, :class => 'icon icon-add' if User.current.allowed_to?(:add_incoming_letters, nil, :global=>true) %>
</div>

<h2><%= t(:label_incoming) %></h2>

<div class="autoscroll">
<table class="list">
  <thead><tr>
  <%= sort_header_tag('incoming_code', :caption => l(:field_incoming_code)) %>
  <%= sort_header_tag('outgoing_code', :caption => l(:field_outgoing_code)) %>
  <%= sort_header_tag('signer', :caption => l(:field_signer)) %>
  <%= sort_header_tag('shipping_from', :caption => l(:field_shipping_from)) %>
  <%= sort_header_tag('shipping_type', :caption => l(:field_shipping_type)) %>
  <%= sort_header_tag('shipping_on', :caption => l(:field_shipping_on)) %>      
  <%= sort_header_tag('recipient', :caption => l(:field_recipient)) %>
  <%= sort_header_tag('original_required', :caption => l(:field_original_required), :default_order => 'desc') %>
  <%= sort_header_tag('created_on', :caption => l(:field_created_on), :default_order => 'desc') %>
  <%= sort_header_tag('executor_id', :caption => l(:field_executor)) %>
  <%= sort_header_tag('author_id', :caption => l(:field_author)) %>    
    <th></th>
  </tr></thead>
  <tbody>
<% for object in @collection -%>
  <tr class="user <%= cycle("odd", "even") %>">
  <td class="incoming_code"><%= link_to h(object.incoming_code), edit_incoming_letter_path(object) %></td>
  <td class="outgoing_code"><%= h(object.outgoing_code) %></td>
  <td class="signer"><%= h(object.signer) %></td>
  <td class="shipping_from"><%= h(object.shipping_from) %></td>
  <td class="shipping_type"><%= h(object.shipping_type) %></td>
  <td class="shipping_on"><%= format_time(object.shipping_on) %></td>          
  <td class="recipient"><%= h(object.recipient) %></td>
  <td class="original_required"><%= checked_image object.original_required? %></td>
  <td class="created_on" align="center"><%= format_time(object.created_on) %></td>
  <td class="executor"><%= h(object.executor) %></td>
  <td class="author"><%= h(object.author) %></td>          
    <td class="buttons">
      <%= link_to(l(:button_delete), incoming_letter_path(object), :confirm => l(:text_are_you_sure), :method => :delete, :class => 'icon icon-del') %>
    </td>
  </tr>
<% end -%>
  </tbody>
</table>
</div>
